---
import { translations } from "../../locals/about/impact";

type Locale = 'en' | 'hi' | 'fr';
const { local = 'en' } = Astro.params ?? {};
const t = translations[local as Locale] || translations['en'];
---

<section class="bg-primary/5 text-foreground py-20 px-4 md:px-10">
  <div class="max-w-6xl mx-auto text-center mb-12">
    <h2 class="text-3xl md:text-4xl font-extrabold">{t.title}</h2>
    <p class="text-lg text-foreground/70 mt-4">{t.subtitle}</p>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8 max-w-6xl mx-auto text-center">
    {t.stats.map((stat) => (
      <div>
        <h3 class="text-4xl font-extrabold text-primary">{stat.number}</h3>
        <p class="text-lg text-foreground/80 mt-2">{stat.label}</p>
      </div>
    ))}
  </div>
</section>
