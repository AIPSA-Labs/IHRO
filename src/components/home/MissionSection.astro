---
import { translations } from "../../locals/home/mission";


type Locale = 'en' | 'hi' | 'fr';
const { local = 'en' } = Astro.params ?? {};
const t = translations[local as Locale] || translations['en'];
---

<section id="mission" class="bg-background min-h-screen flex flex-col items-center justify-center text-foreground py-20">
  <div class="max-w-6xl mx-auto px-2 md:px-4 flex justify-around flex-col md:flex-row items-center gap-12">
        <div class="md:w-1/2 flex justify-center md:justify-start items-center">
      <img src='/favicon.svg' alt="Mission illustration" class="w-1/2 max-w-md" />
    </div>
    <div class="md:w-1/2">
      <h2 class="text-3xl md:text-4xl font-extrabold mb-6">
        {t.title}
      </h2>
      <p class="text-lg md:text-xl text-foreground/80 leading-relaxed">
        {t.description}
      </p>
    </div>

  </div>
</section>
