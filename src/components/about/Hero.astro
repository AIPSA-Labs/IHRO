---
import { translations } from "../../locals/about/hero";

type Locale = 'en' | 'hi' | 'fr';
const { local = 'en' } = Astro.params ?? {};
const t = translations[local as Locale] || translations['en'];
---

<section class="bg-background text-foreground py-20 px-4 md:px-10 flex flex-col items-center text-center">
  <div class="max-w-4xl">
    <h1 class="text-4xl md:text-5xl font-extrabold mb-6">{t.title}</h1>
    <p class="text-lg md:text-xl text-foreground/80 mb-6">{t.subtitle}</p>
    <p class="text-base md:text-lg text-foreground/70">{t.description}</p>
  </div>
</section>
