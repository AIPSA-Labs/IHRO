---
import { translations } from "../../locals/legal/terms";
import Layout from "../../layouts/Layout.astro";

type Locale = 'en' | 'hi' | 'fr';
const { local = 'en' } = Astro.params ?? {};
const t = translations[local as Locale] || translations['en'];
---
<Layout>
<section class="bg-background text-foreground py-20 px-4 md:px-10 max-w-6xl mx-auto">
  <h1 class="text-4xl md:text-5xl font-extrabold mb-8 text-center">{t.title}</h1>
  <p class="text-lg text-foreground/70 mb-12 text-center">{t.intro}</p>

  {t.sections.map((section) => (
    <div class="mb-8">
      <h2 class="text-2xl font-semibold mb-2">{section.heading}</h2>
      <p class="text-foreground/80 whitespace-pre-line">{section.content}</p>
    </div>
  ))}
</section>
</Layout>