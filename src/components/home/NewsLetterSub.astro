---
import { translations } from "../../locals/home/newsletter";

type Locale = 'en' | 'hi' | 'fr';
const { local = 'en' } = Astro.params ?? {};
const t = translations[local as Locale] || translations['en'];
---

<section class="bg-primary text-primary-foreground py-16 px-4 md:px-10">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-3xl md:text-4xl font-extrabold mb-4">{t.title}</h2>
    <p class="text-lg md:text-xl opacity-90 mb-8">{t.subtitle}</p>

    <form class="flex flex-col sm:flex-row justify-center items-center gap-4">
      <input
        type="email"
        placeholder={t.placeholder}
        required
        class="w-full sm:w-auto flex-1 px-4 py-3 rounded-lg border border-gray-300 text-black focus:outline-none focus:ring-2 focus:ring-primary-foreground"
      />
      <button
        type="submit"
        class="bg-primary-foreground text-primary font-semibold px-6 py-3 rounded-lg hover:bg-opacity-90 transition"
      >
        {t.cta}
      </button>
    </form>
  </div>
</section>
