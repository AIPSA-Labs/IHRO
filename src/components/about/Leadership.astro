---
import { translations } from "../../locals/about/leadership";

type Locale = 'en' | 'hi' | 'fr';
const { local = 'en' } = Astro.params ?? {};
const t = translations[local as Locale] || translations['en'];
---

<section class="bg-background text-foreground py-20 px-4 md:px-10">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-extrabold mb-12 text-center">{t.title}</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
      {t.leaders.map((leader) => (
        <div class="bg-foreground/5 rounded-lg p-6 flex flex-col items-center text-center hover:shadow-lg transition">
          <img src={leader.image} alt={leader.name} class="w-32 h-32 rounded-full object-cover mb-4" />
          <h3 class="text-xl font-semibold">{leader.name}</h3>
          <p class="text-sm text-foreground/70">{leader.position}</p>
        </div>
      ))}
    </div>
  </div>
</section>
