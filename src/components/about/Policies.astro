---
import { translations } from "../../locals/about/policies";

type Locale = 'en' | 'hi' | 'fr';
const { local = 'en' } = Astro.params ?? {};
const t = translations[local as Locale] || translations['en'];
---

<section class="bg-background text-foreground py-20 px-4 md:px-10">
  <div class="max-w-6xl mx-auto text-center mb-12">
    <h2 class="text-3xl md:text-4xl font-extrabold">{t.title}</h2>
    <p class="text-lg text-foreground/70 mt-4">{t.subtitle}</p>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
    {t.policies.map((policy) => (
      <div class="bg-foreground/5 p-6 rounded-lg flex flex-col items-center text-center hover:shadow-lg transition">
        <h3 class="text-xl font-semibold mb-2">{policy.title}</h3>
        <p class="text-foreground/80">{policy.description}</p>
      </div>
    ))}
  </div>
</section>
