---
let menuOpen = false;
---

<nav class="navbar">
  <div class="wrap">
    <div class="brand">
    <img src="/favicon.svg" alt="logo" class="logo" />
    <div class="brand">IHRO</div>
    </div>

    <div class="nav-links">
      <a href="/">Home</a>
      <a href="/about">About</a>
      <a href="/campaigns">Campaigns</a>
      <a href="/reports">Reports</a>
      <a href="/contact">Contact</a>
    </div>

    <!-- Hamburger menu for mobile -->
    <button class="hamburger">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</nav>

<style>
  :global(body) {
    margin: 0;
    padding-top: 60px; 
    font-family: "Georgia", serif;
    background: #f8f7f4;
    color: #222;
  }

  .brand{
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
  }
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 60px;
    background-color: #2d2d2d;
    border-bottom: 4px solid #b88b4a;
    z-index: 1000;
  }

  .wrap {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20px;
    height: 100%;
  }

  .logo {
    height: 40px;
    width: 40px;
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  .brand {
    font-family: "Georgia", serif;
    font-size: 1.4rem;
    font-weight: bold;
    color: #f2f2f2;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  .nav-links a {
    color: #f2f2f2;
    text-decoration: none;
    font-size: 0.95rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: color 0.2s ease;
  }

  .nav-links a:hover {
    color: #d7c190;
  }

  /* Hamburger menu */
  .hamburger {
    display: none;
    flex-direction: column;
    justify-content: space-around;
    width: 25px;
    height: 20px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
  }

  .hamburger span {
    display: block;
    width: 100%;
    height: 3px;
    background-color: #f2f2f2;
    border-radius: 2px;
  }

  /* Responsive styles */
  @media (max-width: 768px) {
    .nav-links {
      position: absolute;
      top: 60px;
      left: 0;
      width: 100%;
      background-color: #2d2d2d;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      padding: 1rem 0;
      display: none;
    }

    .nav-links.open {
      display: flex;
    }

    .hamburger {
      display: flex;
    }
  }
</style>
