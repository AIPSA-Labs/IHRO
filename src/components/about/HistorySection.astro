---
import { translations } from "../../locals/about/history";

type Locale = 'en' | 'hi' | 'fr';
const { local = 'en' } = Astro.params ?? {};
const t = translations[local as Locale] || translations['en'];
---

<section class="bg-background text-foreground py-20 px-4 md:px-10">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-extrabold mb-12 text-center">{t.title}</h2>

    <div class="flex flex-col md:flex-row md:justify-between ">
      {t.timeline.map((event) => (
        <div class="flex-1 border-l-2 border-primary pl-4 relative before:absolute before:-left-1.5 before:top-2 before:w-3 before:h-3 before:rounded-full before:bg-primary">
          <h3 class="text-xl font-semibold py-4">{event.year} - {event.title}</h3>
          <p class="text-foreground/80 ">{event.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
