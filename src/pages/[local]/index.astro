---
import GetInvolved from "../../components/home/GetInvolved.astro";
import HeroSection from "../../components/home/HeroSection.astro";
import MissionSection from "../../components/home/MissionSection.astro";
import NewsLetterSub from "../../components/home/NewsLetterSub.astro";
import Presence from "../../components/home/Presence.astro";
import ProgramSection from "../../components/home/ProgramSection.astro";
import Testimonial from "../../components/home/Testimonial.astro";
import Layout from "../../layouts/Layout.astro";
import { supportedLocales } from "../../locals/languages";

const { local } = Astro.params
const codes = supportedLocales.map(l => l.code);

if (!codes.includes(local || '')) {
  return Astro.redirect('/404');
}
---

<Layout>
    <HeroSection/>
    <MissionSection/>
    <ProgramSection/>
    <Presence/>
    <GetInvolved/>
    <NewsLetterSub/>
    <Testimonial/>
</Layout>