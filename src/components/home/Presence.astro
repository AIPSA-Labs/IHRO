---
import { translations } from "../../locals/home/presence";
import { Globe, MapPin, Building } from "@lucide/astro";

type Locale = 'en' | 'hi' | 'fr';
const { local = 'en' } = Astro.params ?? {};
const t = translations[local as Locale] || translations['en'];
---

<section class="bg-background py-28 px-4 md:px-10">

  <!-- Section Title -->
  <div class="max-w-6xl mx-auto text-center mb-16">
    <h2 class="text-3xl md:text-4xl font-extrabold mb-4">{t.title}</h2>
    <div class="w-24 h-[4px] bg-primary mx-auto rounded-full mb-6"></div>
    <p class="text-lg md:text-xl text-foreground/80 max-w-2xl mx-auto">
      {t.subtitle}
    </p>
  </div>

  <!-- International Offices -->
  <div class="max-w-6xl mx-auto mb-20">
    <div class="flex items-center gap-3 mb-6">
      <Globe class="w-8 h-8 text-primary" />
      <h3 class="text-2xl font-bold">{t.internationalTitle}</h3>
    </div>

    <div class="grid gap-8 md:grid-cols-3">
      {t.internationalOffices.map((office) => (
        <div class="bg-primary/5 border border-primary/20 rounded-xl shadow-sm p-6 hover:shadow-lg transition">
          <div class="flex items-center gap-3 mb-4">
            <MapPin class="w-6 h-6 text-primary" />
            <h4 class="text-xl font-semibold">{office.country}</h4>
          </div>
          <p class="text-foreground/80 leading-relaxed">{office.address}</p>
        </div>
      ))}
    </div>
  </div>

  <!-- National Chapters -->
  <div class="max-w-6xl mx-auto mb-20">
    <div class="flex items-center gap-3 mb-6">
      <Building class="w-8 h-8 text-primary" />
      <h3 class="text-2xl font-bold">{t.nationalTitle}</h3>
    </div>

    <div class="bg-surface border border-border rounded-xl p-6">
      <ul class="grid md:grid-cols-2 gap-4 text-foreground/80">
        {t.nationalChapters.map((chapter) => (
          <li class="flex items-start gap-3">
            <span class="w-2 h-2 rounded-full bg-primary mt-2"></span>
            {chapter}
          </li>
        ))}
      </ul>
    </div>
  </div>

  <!-- State Chapters -->
  <div class="max-w-6xl mx-auto">
    <div class="flex items-center gap-3 mb-6">
      <Building class="w-8 h-8 text-primary" />
      <h3 class="text-2xl font-bold">{t.stateTitle}</h3>
    </div>

    <div class="bg-surface border border-border rounded-xl p-6">
      <ul class="grid md:grid-cols-2 gap-4 text-foreground/80">
        {t.stateChapters.map((chapter) => (
          <li class="flex items-start gap-3">
            <span class="w-2 h-2 rounded-full bg-primary mt-2"></span>
            {chapter}
          </li>
        ))}
      </ul>
    </div>
  </div>

</section>
